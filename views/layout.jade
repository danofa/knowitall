  body
    nav.navbar.navbar-inverse.navbar-fixed-top.custom-navbar
      .container
        .navbar-header
          a.navbar-brand(href='/')
            span.glyphicon.glyphicon-home
            |  #{locals.apptitle}
        ol.nav.navbar-nav.navbar-right
          if locals.session.authenticated
            li.navbar-text#displayname= locals.session.displayname
            li: a.glyphicon.glyphicon-log-out(href="/logout" title="logout")
          li
            a.glyphicon.glyphicon-log-in(href="/login" title="login")
            
        if locals.session.authenticated
          ol.nav.navbar-nav.navbar-right
            li.dropdown
              a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") admin
                span.caret
              ul.dropdown-menu
                li: a(href="/admin") Admin Index
                li.divider(role="separator")
                li: a(href="/admin/topic/list/tree") List Topics ( tree )
                li: a(href="/admin/topic/list/table") List Topics ( table )    
                li: a(href="/admin/topic/add") Add Topic
                li.divider(role="separator")
                li: a(href="/admin/article/list") List Articles
                li: a(href="/admin/article/add") Add Article

        ol.nav.navbar-nav.navbar-right
          li.dropdown
            a.dropdown-toggle(href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" title="Random Utilities") Utils
              span.caret
            ul.dropdown-menu
              li: a(href="/iputils.html") IP Utils
              li.divider(role="separator")
                 
    .container
      form(method="POST" action="/search")
        .input-group
          input.form-control(type="text" name="search" placeholder="Search for...")
          span.input-group-btn
            button.btn.btn-primary(type="submit") Go!
              
