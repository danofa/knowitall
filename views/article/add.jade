extends ../layout

block content
	if add_error
		.error #{add_error}
	form.form-horizontal(method="POST")
	
		.form-group
			label.control-label.col-sm-4(for='title') Title:			
			.col-sm-4
				input.form-control(type='text' name='title')
			.col-sm-offset-4

		.form-group
			label.control-label.col-sm-4(for='group') Group:
			.col-sm-4
				select.form-control(name="group")
					each o in topicgroups
						option(value="#{o._id}") #{o.title} / #{o.description}
			.col-sm-offset-4
			
		.form-group
			label.control-label.col-sm-4(for='quicklink') Quicklink:
			.col-sm-4
				input.form-control(type='text' name='quicklink')
			.col-sm-offset-4
		
		.form-group
			label.control-label.col-sm-4(for='body') Body:
			.col-sm-4
				textarea.form-control(name="body" rows="10")
			.col-sm-offset-4
			
		.form-group
			.col-sm-offset-4.col-sm-4
				button.btn.btn-default.form-control(type='submit' id='submit' name='submit') SUBMIT
		
	include ../includes/links.jade